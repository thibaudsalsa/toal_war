<div class="container">
  
  <h4>Profil</h4>

  <form method="POST" action="/account?_method=PUT">
    <label for="email">Email</label>
    <input type="email" name="email" id="email" value="{{user.email}}">
    <label for="name">Nom</label>
    <input type="text" name="name" id="name" value="{{user.name}}">
    <label for="background">Fond</label>
    <select type="text" name="background" id="background">
      <option value={{user.background}}>changez ici le fond de votre interface</option>
      <option value="#FFFFFF" style="background: #FFFFFF">fond blanc</option>
      <option value="#E0CDA9" style="background: #E0CDA9">fond s√©pia</option>
      <option value="#D2CAEC" style="background: #D2CAEC">fond lavande</option>
    </select>
    <label>Image de profil</label>
    <img srcset="{{user.picture}}, {{user.gravatar}}" class="gravatar" width="100" height="100">
    <br>
    <button type="submit">sauvegarder</button>
  </form>

  <h4>Changer le mot de passe</h4>

  <form method="POST" action="/account?_method=PUT">
    <label for="password">Nouveau mot de passe</label>
    <input type="password" name="password" id="password">
    <label for="confirm">Confirmer le mot de passe</label>
    <input type="password" name="confirm" id="confirm">
    <br>
    <button type="submit">Changer le mot de passe</button>
  </form>

  <h4>Linked Accounts</h4>

{{#if user.facebook}}
  <p><a href="/unlink/facebook" class="text-danger">Retirer Facebook</a></p>
{{else}}
  <p><a href="/auth/facebook">Facebook</a></p>
{{/if}}
{{#if user.twitter}}
  <p><a href="/unlink/twitter" class="text-danger">Retirer Twitter</a></p>
{{else}}
  <p><a href="/auth/twitter">Twitter</a></p>
{{/if}}
{{#if user.google}}
  <p><a href="/unlink/google" class="text-danger">Retirer Google</a></p>
{{else}}
  <p><a href="/auth/google">Google</a></p>
{{/if}}

  <h4>Supprimer le compte</h4>

  <form method="POST" action="/account?_method=DELETE">
    <p>Vous pouvez supprimer votre compte mais cette action est irreversible.</p>
    <button type="submit">Supprimer mon compte</button>
  </form>
</div>
